<?xml version="1.0" encoding="utf-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    
    <name>Vendas</name>
    
    <component>
        <component-type>org.primefaces.component.UltimaMenu</component-type>
        <component-class>org.primefaces.ultima.component.menu.UltimaMenu</component-class>
    </component>
    
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.UltimaMenuRenderer</renderer-type>
            <renderer-class>org.primefaces.ultima.component.menu.UltimaMenuRenderer</renderer-class>
        </renderer>
    </render-kit>
 
    <application>    
        <resource-bundle>
            <base-name>com.tcibpo.content.app.message.Messages</base-name>
            <var>msg</var>
        </resource-bundle>
        
        <el-resolver>
                org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
        
    </application>
    
    	
    <navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>administrador</from-outcome>
			<to-view-id>/administrador.xhtml?faces-redirect=true</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>principal</from-outcome>
			<to-view-id>/principal.xhtml?faces-redirect=true</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>dashboard</from-outcome>
			<to-view-id>/dashboard.xhtml?faces-redirect=true</to-view-id>
		</navigation-case>
	</navigation-rule>
	
		<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>usuarioExclusao</from-outcome>
			<to-view-id>/usuarioExclusao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>usuarioCadastro</from-outcome>
			<to-view-id>/usuarioCadastro.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>usuarioAlterar</from-outcome>
			<to-view-id>/usuarioAlterar.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
			<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>produtoExclusao</from-outcome>
			<to-view-id>/produtoExclusao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>produtoCadastro</from-outcome>
			<to-view-id>/produtoCadastro.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>produtoAlterar</from-outcome>
			<to-view-id>/produtoAlterar.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>